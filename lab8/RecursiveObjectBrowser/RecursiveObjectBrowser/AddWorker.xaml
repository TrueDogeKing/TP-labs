<Window x:Class="RecursiveObjectBrowser.AddWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pracownika" Height="350" Width="300">

    <StackPanel Margin="20">
        <TextBlock Text="Dodaj nowego pracownika" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <Label Content="Imię:"/>
        <TextBox x:Name="NameBox"/>

        <Label Content="Nazwisko:"/>
        <TextBox x:Name="SurnameBox"/>

        <Label Content="Stanowisko:"/>
        <TextBox x:Name="PositionBox"/>

        <Label Content="Pensja:"/>
        <TextBox x:Name="SalaryBox"/>

        <Label Content="Doświadczenie (lata):"/>
        <TextBox x:Name="ExperienceBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Dodaj" Click="AddWorker_Click" Margin="5"/>
            <Button Content="Wypełnij automatycznie" Click="GenerateRandom_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
